<?xml version="1.0" encoding="utf-8" ?>
<Template Title = "Cache Controls">
	<div class = "rocket-column-2">
		<p>
			Client Cache:
		</p>
		<p>
			<input type = "button" value = "Clear" onclick = "${this}.setStatus('Flushed UWM Service Cache: ' + uwmServiceCache.clearCache())" />
		</p>
	</div>
	<div class = "rocket-column-2" style = "border-top:.2em solid #000000;">
		<p>
			Data Cache:
		</p>
		<p>
			<input type = "button" value = "Clear" onclick = "${this}.setStatus('Flushed Data Cache: ' + accountManager.clearDataCache())" />
		</p>
	</div>
	<div class = "rocket-column-2">
		<p>
			Group Cache:
		</p>
		<p>
			<input type = "button" value = "Clear" onclick = "${this}.setStatus('Flushed Group Cache: ' + accountManager.clearGroupCache())" />
		</p>
	</div>

	<div class = "rocket-column-2">
		<p>
			Role Cache:
		</p>
		<p>
			<input type = "button" value = "Clear" onclick = "${this}.setStatus('Flushed Role Cache: ' + accountManager.clearRoleCache())" />
		</p>
	</div>
	<div class = "rocket-column-2">
		<p>
			User Cache:
		</p>
		<p>
			<input type = "button" value = "Clear" onclick = "${this}.setStatus('Flushed User Cache: ' + accountManager.clearUserCache())" />
		</p>
	</div>
	<div class = "rocket-column-2" style = "border-top:.2em solid #000000;">
		<p>
			Flush Authorization
		</p>
		<p>
			<input type = "button" value = "Clear" onclick = "${this}.setStatus('Flushed Authorization Cache: ' + accountManager.clearAuthorizationCache())" />
		</p>
	</div>

	<div class = "rocket-column-2" style = "border-top:.2em solid #000000;">
		<p>
			Flush All
		</p>
		<p>
			<input type = "button" value = "Clear" onclick = "${this}.setStatus('Flushed All Caches: ' + accountManager.flushCache())" />
		</p>
	</div>
	
	<import-xml src = "/AccountManagerExample/Forms/StatusFrag.xml" id = "StatusFrag" />

</Template>
