<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
<Properties>
<Property name="log-path">./logs</Property>
</Properties>
<Appenders>
<Console name="console-log" target="SYSTEM_OUT">
<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
</Console>
<RollingFile name="trace-log" fileName="${log-path}/accountManagerConsole.log"
filePattern="${log-path}/accountManagerConsole-%d{yyyy-MM-dd}.log">
<PatternLayout>
<pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
</PatternLayout>
<Policies>
<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
</Policies>
</RollingFile>
<RollingFile name="error-log" fileName="${log-path}/accountManagerConsole-error.log"
filePattern="${log-path}/accountManagerConsole-error-%d{yyyy-MM-dd}.log">
<PatternLayout>
<pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
</PatternLayout>
<Policies>
<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
</Policies>
</RollingFile>
</Appenders>
<Loggers>
<Logger name="org.cote.rest.log4j2" level="info" additivity="false">
<appender-ref ref="trace-log" level="info"/>
<appender-ref ref="error-log" level="error"/>
<appender-ref ref="console-log" level="info"/>
</Logger>

<Root level="all" additivity="true">
<appender-ref ref="trace-log" level="info"/>
<appender-ref ref="error-log" level="error"/>
<appender-ref ref="console-log" level="info"/>
</Root>

</Loggers>
</Configuration>